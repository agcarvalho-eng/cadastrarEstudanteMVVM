<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".view.AdicionarFrequenciaActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Frequência"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <RadioGroup
            android:id="@+id/radioGroupFrequencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioPresente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="presente"/>

            <RadioButton
                android:id="@+id/radioAusente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ausente"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnSalvarFrequencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Frequência"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</layout>